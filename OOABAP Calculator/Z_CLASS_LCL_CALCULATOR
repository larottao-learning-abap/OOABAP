CLASS Z_CLASS_LCL_CALCULATOR DEFINITION
  PUBLIC
  CREATE PUBLIC .

PUBLIC SECTION.
  METHODS CALCULATE
    IMPORTING
      !P_NUM1 TYPE I
      !P_NUM2 TYPE I
      !P_OP TYPE CHAR1
    RETURNING
      VALUE(RESULT) TYPE I.

  METHODS ADD
    IMPORTING
      !P_NUM1 TYPE I
      !P_NUM2 TYPE I
    RETURNING
      VALUE(RESULT) TYPE I.

  METHODS SUBTRACT
    IMPORTING
      !P_NUM1 TYPE I
      !P_NUM2 TYPE I
    RETURNING
      VALUE(RESULT) TYPE I.

  METHODS MULTIPLY
    IMPORTING
      !P_NUM1 TYPE I
      !P_NUM2 TYPE I
    RETURNING
      VALUE(RESULT) TYPE I.

  METHODS DIVIDE
    IMPORTING
      !P_NUM1 TYPE I
      !P_NUM2 TYPE I
    RETURNING
      VALUE(RESULT) TYPE I.
ENDCLASS.

CLASS Z_CLASS_LCL_CALCULATOR IMPLEMENTATION.
  METHOD CALCULATE.
    CASE P_OP.
      WHEN '+'.
        RESULT = ME->ADD( P_NUM1 = P_NUM1 P_NUM2 = P_NUM2 ).
      WHEN '-'.
        RESULT = ME->SUBTRACT( P_NUM1 = P_NUM1 P_NUM2 = P_NUM2 ).
      WHEN '*'.
        RESULT = ME->MULTIPLY( P_NUM1 = P_NUM1 P_NUM2 = P_NUM2 ).
      WHEN '/'.
        IF P_NUM2 = 0.
          WRITE: 'Error: Division by zero!'.
          RETURN.
        ENDIF.
        RESULT = ME->DIVIDE( P_NUM1 = P_NUM1 P_NUM2 = P_NUM2 ).
      WHEN OTHERS.
        WRITE: 'Invalid operation!'.
        RETURN.
    ENDCASE.
  ENDMETHOD.

  METHOD ADD.
    RESULT = P_NUM1 + P_NUM2.
  ENDMETHOD.

  METHOD SUBTRACT.
    RESULT = P_NUM1 - P_NUM2.
  ENDMETHOD.

  METHOD MULTIPLY.
    RESULT = P_NUM1 * P_NUM2.
  ENDMETHOD.

  METHOD DIVIDE.
    RESULT = P_NUM1 / P_NUM2.
  ENDMETHOD.

ENDCLASS.
